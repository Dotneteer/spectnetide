<UserControl x:Class="Spect.Net.VsPackage.ToolWindows.KeyboardTool.KeyboardToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:keyboardTool1="clr-namespace:Spect.Net.VsPackage.ToolWindows.KeyboardTool"
             Background="{DynamicResource BKeyboardBackground}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\..\PackageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" x:Name="Row1"
                    Orientation="Horizontal" 
                    Margin="12,12,0,2">
            <keyboardTool1:SingleKeyControl 
                Code="N1"
                Margin="0,0,18,0"
                MainKey="1" SShiftKey="!" ExtKey="EDIT" ExtShiftKey="DEF FN" 
                NumericMode="True"
                ColorKey="BLUE" 
                HasGraphics="true"
                GraphicsCode="1"
                NumForeground="#3030FF"/>
            <keyboardTool1:SingleKeyControl 
                Code="N2"
                Margin="0,0,18,0"
                MainKey="2" SShiftKey="@" ExtKey="CAPS LOCK" ExtShiftKey="FN" 
                NumericMode="True" 
                ColorKey="RED"
                HasGraphics="true"
                GraphicsCode="2"
                NumForeground="#D02020"/>
            <keyboardTool1:SingleKeyControl 
                Code="N3"
                Margin="0,0,18,0"
                MainKey="3" SShiftKey="#" ExtKey="TRUE VIDEO" ExtShiftKey="LINE" 
                NumericMode="True"
                ColorKey="MAGENTA"
                HasGraphics="true"
                GraphicsCode="3"
                NumForeground="#C000C0"/>
            <keyboardTool1:SingleKeyControl 
                Code="N4"
                Margin="0,0,18,0"
                MainKey="4" SShiftKey="$" ExtKey="INV VIDEO" ExtShiftKey="OPEN #" 
                NumericMode="True"
                ColorKey="GREEN"
                HasGraphics="true"
                GraphicsCode="4"
                NumForeground="#40A040"/>
            <keyboardTool1:SingleKeyControl 
                Code="N5"
                Margin="0,0,18,0"
                MainKey="5" SShiftKey="%" ExtKey="&#x25C4;" ExtShiftKey="DEF FN" 
                NumericMode="True"
                ColorKey="CYAN"
                HasGraphics="true"
                GraphicsCode="5"
                NumForeground="#00C0C0"/>
            <keyboardTool1:SingleKeyControl 
                Code="N6"
                Margin="0,0,18,0"
                MainKey="6" SShiftKey="&amp;" ExtKey="&#x25BC;" ExtShiftKey="MOVE" 
                NumericMode="True"
                ColorKey="YELLOW"
                HasGraphics="true"
                GraphicsCode="6"
                NumForeground="#C0C040"/>
            <keyboardTool1:SingleKeyControl 
                Code="N7"
                Margin="0,0,18,0"
                MainKey="7" SShiftKey="'" 
                ExtKey="&#x25B2;" 
                ExtShiftKey="ERASE" 
                HasGraphics="true"
                GraphicsCode="7"
                NumericMode="True"/>
            <keyboardTool1:SingleKeyControl 
                Code="N8"
                Margin="0,0,18,0"
                MainKey="8" 
                SShiftKey="(" 
                ExtKey="&#x25BA;" 
                ExtShiftKey="POINT" 
                HasGraphics="true"
                GraphicsCode="0"
                NumericMode="True"/>
            <keyboardTool1:SingleKeyControl 
                Code="N9"
                Margin="0,0,18,0"
                MainKey="9" SShiftKey=")" ExtKey="GRAPHICS" ExtShiftKey="CAT" 
                NumericMode="True"/>
            <keyboardTool1:SingleKeyControl 
                Code="N0"
                Margin="0,0,18,0"
                MainKey="0" SShiftKey="_" ExtKey="DELETE" ExtShiftKey="FORMAT" 
                NumericMode="True"
                ColorKey="BLACK"
                NumForeground="Black"
                NumBackground="{StaticResource BMainButtonText}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" x:Name="Row2"
                    Orientation="Horizontal" 
                    Margin="48,0,0,2">
            <keyboardTool1:SingleKeyControl 
                Code="Q"
                Margin="0,0,18,0"
                MainKey="Q" Keyword="PLOT" SShiftKey="&lt;=" ExtKey="SIN" ExtShiftKey="ASN" />
            <keyboardTool1:SingleKeyControl 
                Code="W"
                Margin="0,0,18,0"
                MainKey="W" Keyword="DRAW" SShiftKey="&lt;&gt;" ExtKey="COS" ExtShiftKey="ACS" />
            <keyboardTool1:SingleKeyControl 
                Code="E"
                Margin="0,0,18,0"
                MainKey="E" Keyword="REM" SShiftKey="&gt;=" ExtKey="TAN" ExtShiftKey="ATN" />
            <keyboardTool1:SingleKeyControl 
                Code="R"
                Margin="0,0,18,0"
                MainKey="R" Keyword="RUN" SShiftKey="&lt;" ExtKey="INT" ExtShiftKey="VERIFY" />
            <keyboardTool1:SingleKeyControl 
                Code="T"
                Margin="0,0,18,0"
                MainKey="T" Keyword="RAND" SShiftKey="&gt;" ExtKey="RND" ExtShiftKey="MERGE" />
            <keyboardTool1:SingleKeyControl 
                Code="Y"
                Margin="0,0,18,0"
                MainKey="Y" Keyword="RETURN" SShiftKey="AND" ExtKey="STR$" ExtShiftKey="[" />
            <keyboardTool1:SingleKeyControl 
                Code="U"
                Margin="0,0,18,0"
                MainKey="U" Keyword="IF" SShiftKey="OR" ExtKey="CHR$" ExtShiftKey="]" />
            <keyboardTool1:SingleKeyControl 
                Code="I"
                Margin="0,0,18,0"
                MainKey="I" Keyword="INPUT" SShiftKey="AT" ExtKey="CODE" ExtShiftKey="IN" />
            <keyboardTool1:SingleKeyControl 
                Code="O"
                Margin="0,0,18,0"
                MainKey="O" Keyword="POKE" SShiftKey=";" ExtKey="PEEK" ExtShiftKey="OUT" />
            <keyboardTool1:SingleKeyControl 
                Code="P"
                Margin="0,0,18,0"
                MainKey="P" Keyword="PRINT" SShiftKey="&quot;" ExtKey="TAB" ExtShiftKey="(C)" />
        </StackPanel>
        <StackPanel Grid.Row="2" x:Name="Row3"
                    Orientation="Horizontal" 
                    Margin="84,0,0,2">
            <keyboardTool1:SingleKeyControl 
                Code="A"
                Margin="0,0,18,0"
                MainKey="A" Keyword="NEW" SShiftKey="STOP" ExtKey="READ" ExtShiftKey="~" />
            <keyboardTool1:SingleKeyControl 
                Code="S"
                Margin="0,0,18,0"
                MainKey="S" Keyword="SAVE" SShiftKey="NOT" ExtKey="RESTORE" ExtShiftKey="|" />
            <keyboardTool1:SingleKeyControl 
                Code="D"
                Margin="0,0,18,0"
                MainKey="D" Keyword="DIM" SShiftKey="STEP" ExtKey="DATA" ExtShiftKey="\" />
            <keyboardTool1:SingleKeyControl 
                Code="F"
                Margin="0,0,18,0"
                MainKey="F" Keyword="FOR" SShiftKey="TO" ExtKey="SGN" ExtShiftKey="{}{" />
            <keyboardTool1:SingleKeyControl 
                Code="G"
                Margin="0,0,18,0"
                MainKey="G" Keyword="GOTO" SShiftKey="THEN" ExtKey="ABS" ExtShiftKey="}" />
            <keyboardTool1:SingleKeyControl 
                Code="H"
                Margin="0,0,18,0"
                MainKey="H" Keyword="GOSUB" SShiftKey="&#x2191;" ExtKey="SQR" ExtShiftKey="CIRCLE" />
            <keyboardTool1:SingleKeyControl 
                Code="J"
                Margin="0,0,18,0"
                MainKey="J" Keyword="LOAD" SShiftKey="-" ExtKey="VAL" ExtShiftKey="VAL$" />
            <keyboardTool1:SingleKeyControl 
                Code="K"
                Margin="0,0,18,0"
                MainKey="K" Keyword="LIST" SShiftKey="+" ExtKey="LEN" ExtShiftKey="SCREEN$" />
            <keyboardTool1:SingleKeyControl 
                Code="L"
                Margin="0,0,18,0"
                MainKey="L" Keyword="LET" SShiftKey="=" ExtKey="USR" ExtShiftKey="ATTR" />
            <keyboardTool1:SingleKeyControl 
                Code="Enter"
                Margin="0,0,18,0"
                SimpleMode="True" Keyword="ENTER" ButtonWidth="60"/>
        </StackPanel>
        <StackPanel Grid.Row="3" x:Name="Row4"
                    Orientation="Horizontal" 
                    Margin="12,0,0,2">
            <keyboardTool1:SingleKeyControl 
                Code="CShift"
                Margin="0,0,18,0"
                SimpleMode="True" Keyword="CAPS SHIFT" ButtonWidth="96"/>
            <keyboardTool1:SingleKeyControl 
                Code="Z"
                Margin="0,0,18,0"
                MainKey="Z" Keyword="COPY" SShiftKey=":" ExtKey="LN" ExtShiftKey="BEEP" />
            <keyboardTool1:SingleKeyControl 
                Code="X"
                Margin="0,0,18,0"
                MainKey="X" Keyword="CLEAR" SShiftKey="&#x00A3;" ExtKey="EXP" ExtShiftKey="INK" />
            <keyboardTool1:SingleKeyControl 
                Code="C"
                Margin="0,0,18,0"
                MainKey="C" Keyword="CONT" SShiftKey="?" ExtKey="LPRINT" ExtShiftKey="PAPER" />
            <keyboardTool1:SingleKeyControl 
                Code="V"
                Margin="0,0,18,0"
                MainKey="V" Keyword="CLS" SShiftKey="/" ExtKey="LLIST" ExtShiftKey="FLASH" />
            <keyboardTool1:SingleKeyControl 
                Code="B"
                Margin="0,0,18,0"
                MainKey="B" Keyword="BORDER" SShiftKey="*" ExtKey="BIN" ExtShiftKey="BRIGHT" />
            <keyboardTool1:SingleKeyControl 
                Code="N"
                Margin="0,0,18,0"
                MainKey="N" Keyword="NEXT" SShiftKey="," ExtKey="INKEY$" ExtShiftKey="OVER" />
            <keyboardTool1:SingleKeyControl 
                Code ="M"
                Margin="0,0,18,0"
                MainKey="M" Keyword="PAUSE" SShiftKey="." ExtKey="PI" ExtShiftKey="INVERSE" />
            <keyboardTool1:SingleKeyControl 
                Code="SShift"
                Margin="0,0,18,0"
                SimpleMode="True" Keyword="SYM   SHIFT" SymMode="True" ButtonWidth="60"/>
            <keyboardTool1:SingleKeyControl 
                Code="Space"
                Margin="0,0,18,0"
                SimpleMode="True" Keyword="BREAK         SPACE" ButtonWidth="96"/>
        </StackPanel>
    </Grid>
</UserControl>
