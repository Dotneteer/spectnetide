<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:memory="clr-namespace:Spect.Net.VsPackage.ToolWindows.Memory"
             x:Class="Spect.Net.VsPackage.ToolWindows.Memory.MemoryLineControl" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500" 
             d:DataContext="{d:DesignInstance {x:Type memory:MemoryLineViewModel}, IsDesignTimeCreatable=True}" 
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\..\PackageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <WrapPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="96"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Addr1}" Style="{DynamicResource Z80HilitedText}" />
                <TextBlock Grid.Column="1" x:Name="Byte0" Text="{Binding Value0}" Style="{DynamicResource MemData}" Background="{Binding Mark0}" />
                <TextBlock Grid.Column="2" x:Name="Byte1" ToolTip="HL --> #4002" Text="{Binding Value1}" Style="{DynamicResource MemData}" Background="{Binding Mark1}" />
                <TextBlock Grid.Column="3" x:Name="Byte2" Text="{Binding Value2}" Style="{DynamicResource MemData}" Background="{Binding Mark2}" />
                <TextBlock Grid.Column="4" x:Name="Byte3" Text="{Binding Value3}" Style="{DynamicResource MemData}" Background="{Binding Mark3}" />
                <TextBlock Grid.Column="5" x:Name="Byte4" Text="{Binding Value4}" Style="{DynamicResource MemData}" Background="{Binding Mark4}" />
                <TextBlock Grid.Column="6" x:Name="Byte5" Text="{Binding Value5}" Style="{DynamicResource MemData}" Background="{Binding Mark5}" />
                <TextBlock Grid.Column="7" x:Name="Byte6" Text="{Binding Value6}" Style="{DynamicResource MemData}" Background="{Binding Mark6}" />
                <TextBlock Grid.Column="8" x:Name="Byte7" Text="{Binding Value7}" Style="{DynamicResource MemData}" Background="{Binding Mark7}" />
                <TextBlock Grid.Column="9" Text="{Binding Dump1}" Style="{DynamicResource MemDump}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="96"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Addr2}" Style="{DynamicResource Z80HilitedText}" />
                <TextBlock Grid.Column="1" x:Name="Byte8" Text="{Binding Value8}" Style="{DynamicResource MemData}" Background="{Binding Mark8}" />
                <TextBlock Grid.Column="2" x:Name="Byte9" Text="{Binding Value9}" Style="{DynamicResource MemData}" Background="{Binding Mark9}" />
                <TextBlock Grid.Column="3" x:Name="ByteA" Text="{Binding ValueA}" Style="{DynamicResource MemData}" Background="{Binding MarkA}" />
                <TextBlock Grid.Column="4" x:Name="ByteB" Text="{Binding ValueB}" Style="{DynamicResource MemData}" Background="{Binding MarkB}" />
                <TextBlock Grid.Column="5" x:Name="ByteC" Text="{Binding ValueC}" Style="{DynamicResource MemData}" Background="{Binding MarkC}" />
                <TextBlock Grid.Column="6" x:Name="ByteD" Text="{Binding ValueD}" Style="{DynamicResource MemData}" Background="{Binding MarkD}" />
                <TextBlock Grid.Column="7" x:Name="ByteE" Text="{Binding ValueE}" Style="{DynamicResource MemData}" Background="{Binding MarkE}" />
                <TextBlock Grid.Column="8" x:Name="ByteF" Text="{Binding ValueF}" Style="{DynamicResource MemData}" Background="{Binding MarkF}" />
                <TextBlock Grid.Column="9" Text="{Binding Dump2}" Style="{DynamicResource MemDump}" />
            </Grid>
        </WrapPanel>
    </Grid>
</UserControl>
