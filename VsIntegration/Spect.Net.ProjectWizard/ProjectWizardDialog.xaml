<Window x:Class="Spect.Net.ProjectWizard.ProjectWizardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        Background="{DynamicResource BToolBackground}"
        
        mc:Ignorable="d" 
        d:DesignHeight="300" d:DesignWidth="300" WindowStartupLocation="CenterScreen" Title="Create a new ZX Spectrum project" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    
    <Window.Resources>
        <Color x:Key="CToolBackground">#FF202020</Color>
        <SolidColorBrush x:Key="BToolBackground" Color="{StaticResource CToolBackground}"/>
    </Window.Resources>
    <Grid>
        <TextBlock Margin="32" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   Foreground="White">
            Spectrum Project Wizard
        </TextBlock>
    </Grid>
</Window>
