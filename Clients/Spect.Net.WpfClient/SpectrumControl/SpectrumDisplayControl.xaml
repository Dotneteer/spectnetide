<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:spectrumControl="clr-namespace:Spect.Net.WpfClient.SpectrumControl"
             xmlns:machine="clr-namespace:Spect.Net.WpfClient.Machine"
             x:Class="Spect.Net.WpfClient.SpectrumControl.SpectrumDisplayControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300" 
             Loaded="OnLoaded"
             Unloaded="OnUnloaded"
             SizeChanged="OnSizeChanged"
             Focusable="True" d:DataContext="{d:DesignInstance {x:Type machine:MachineViewModel}, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <spectrumControl:VmBorderConverter x:Key="VmBorderConverter" />
    </UserControl.Resources>
    <Grid>
        <Border BorderThickness="4"
                BorderBrush="{Binding VmState, Converter={StaticResource VmBorderConverter}}">
            <Image x:Name="Display"  
                   SnapsToDevicePixels="True"
                   RenderOptions.BitmapScalingMode="NearestNeighbor" 
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch" RenderTransformOrigin="0.5,0.5"/>
        </Border>
    </Grid>
</UserControl>